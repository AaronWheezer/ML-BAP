@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1>Warehouse Management System</h1>

    <form id="palletForm">

        <label for="weight">Weight (kg):</label>
        <input type="number" id="weight" name="weight" step="0.01" required><br><br>

        <label for="size">Size (m³):</label>
        <input type="number" id="size" name="size" step="0.01" required><br><br>

        <label for="fragility">Fragility:</label>
        <select id="fragility" name="fragility">
            <option value="High">High</option>
            <option value="Medium">Medium</option>
            <option value="Low">Low</option>
        </select><br><br>

        <label for="storedIn">Stored In:</label>
        <select id="storedIn" name="storedIn">
            <option value="Pallet">Pallet</option>
            <option value="Shelf">Shelf</option>
            <option value="Bin">Bin</option>
        </select><br><br>

        <button type="submit">Add Pallet</button>
    </form>

    <div id="result"></div>
</div>

<div id="loadingBars"></div>